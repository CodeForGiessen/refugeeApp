<?xml version='1.0' encoding='utf-8'?>
<widget id="de.codefor.giessen.RefugeeApp" version="1.1.1" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Refugees Giessen</name>
  <description>
    Diese App soll allen Flüchtlingen helfen, die in Giessen ankommen.
  </description>
  <author email="codeforgi@gmail.com" href="http://codefor.de/giessen">
    Code for Germany - OK Lab Gießen
  </author>
  <content src="index.html"/>
  <plugin name="cordova-plugin-whitelist" spec="1"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
    <icon src="res/android/default/icon.png"/>
    <splash src="res/android/default/splash.png"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <engine name="ios" spec="~4.1.1"/>
  <engine name="android" spec="~5.1.1"/>
  <plugin name="cordova-plugin-device" spec="~1.1.2"/>
  <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0"/>
  <plugin name="ionic-plugin-keyboard" spec="~2.2.0"/>
  <plugin name="cordova-plugin-network-information" spec="~1.2.1"/>
  <plugin name="cordova-plugin-splashscreen" spec="~3.2.2"/>
  <plugin name="cordova-plugin-email-composer" spec="~0.8.3"/>
  <plugin name="mx.ferreyra.callnumber" spec="https://github.com/Rohfosho/CordovaCallNumberPlugin.git"/>
</widget>
